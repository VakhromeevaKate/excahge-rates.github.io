{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "strict": true,
      "target": "es5",
      "allowJs": true,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "downlevelIteration": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "preserve"
    },
    "include": [
      "src",
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx",
      "src/**/*.html"
    ]
}
